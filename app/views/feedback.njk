{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/character-count/macro.njk" import govukCharacterCount %}

{% extends '_layout.njk' %}

{% set pageHeading = "Give feedback" %}

{% block pageTitle %}{{ serviceName }}
{% endblock %}

{% block beforeContent %}
  <div class="govuk-breadcrumbs">
    <ol class="govuk-breadcrumbs__list">
      <li class="govuk-breadcrumbs__list-item">
        <a class="govuk-breadcrumbs__link" href="/cdo/search/basic">Home</a>
      </li>
    </ol>
  </div>
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

    {% if model.errors | length > 0 %}
      {{ govukErrorSummary({
        titleText: "There is a problem",
        errorList: model.errors
      }) }}
    {% endif %}

      <form class="form" method="post">
      <h1 class="govuk-heading-l">Give feedback on Dangerous Dogs Index</h1>

      <h2 class="govuk-heading-m">Satisfaction survey</h2>

      <div class="govuk-form-group">
        {{ govukRadios(model.satisfaction) }}
        {{ govukCharacterCount(model.improvements) }}
      </div>

      <button class="govuk-button" data-module="govuk-button">
        Send feedback
      </button>

      </form>

    </div>
  </div>

{% endblock %}